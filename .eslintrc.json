{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script",
    "ecmaFeatures": {
      "jsx": true,
      "modules": false
    }
  },
  "env": {
    "node": true,
    "es6": true
  },
  "globals": {
    "server": true,
    "errorResponse": true,
    "json": true
  },
  "plugins": [
    "promise"
  ],
  "rules": {
    "semi": [
      1,
      "always"
    ],
    "indent": [
      1,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "strict": [
      2,
      "global"
    ],
    "no-undef": 2,
    "no-var": 2,
    "no-unused-vars": 1,
    "curly": [
      2,
      "multi-line"
    ],
    "eqeqeq": [
      2,
      "smart"
    ],
    "max-depth": [
      1,
      3
    ],
    "no-dupe-keys": "error",
    "no-extend-native": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 1,
    "no-use-before-define": [
      2,
      "nofunc"
    ],
    "quotes": [
      2,
      "single",
      "avoid-escape"
    ],
    "max-len": [
      1,
      120
    ],
    "promise/param-names": "error",
    "promise/catch-or-return": "error",
    "promise/no-native": "off"
  }
}
